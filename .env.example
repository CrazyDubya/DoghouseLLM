# Multi-Agent City Platform Environment Configuration
# Copy this file to .env and update with your values

# API Keys for LLM Providers (optional - will use demo mode if not provided)
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Security
JWT_SECRET=your-secret-jwt-key-change-in-production
ENCRYPTION_KEY=your-encryption-key-here

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/multiagent_city
REDIS_URL=redis://localhost:6379

# Services URLs (for local development)
WORLD_ORCHESTRATOR_URL=http://localhost:8001
AGENT_SCHEDULER_URL=http://localhost:8002
API_GATEWAY_URL=http://localhost:8000
QDRANT_URL=http://localhost:6333

# MQTT Configuration
MQTT_HOST=localhost
MQTT_PORT=1883

# Resource Limits (Docker)
# Adjust based on your system resources
WORLD_ORCHESTRATOR_CPU_LIMIT=1.0
WORLD_ORCHESTRATOR_MEM_LIMIT=1G
AGENT_SCHEDULER_CPU_LIMIT=2.0
AGENT_SCHEDULER_MEM_LIMIT=2G
API_GATEWAY_CPU_LIMIT=0.5
API_GATEWAY_MEM_LIMIT=512M

# Economy Configuration
INITIAL_BALANCE=1000
DAILY_BASIC_INCOME=50
TRANSACTION_FEE=0.01

# Monitoring
PROMETHEUS_RETENTION=15d
GRAFANA_ADMIN_PASSWORD=admin

# Debug Mode
DEBUG=false
LOG_LEVEL=INFO